  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:image field='logo' src='logo.png' />

	<ui:style>

		.statusDiv {
		text-align: right;
		margin: 1em;
		}

		.linksDiv {
		text-align: right;
		}

		@sprite .logo {
		gwt-image: 'logo';
		position: absolute;
		}
	</ui:style>

	<g:HTMLPanel>
	    <h3>Pi info</h3>
	</g:HTMLPanel>
</ui:UiBinder>
